{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{/each}}

<div class="card card-body">

    <h1>Edit Video Ideas</h1>
    <form action='/ideas/{{ideas.id}}?_method=PUT' method='post'>
    <input type='hidden' name='_method' value='PUT'>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" value={{ideas.title}}>
    </div>
        <div class="form-group">
        <label for="details">Details</label>
        <textarea  class="form-control" name="details">{{ideas.details}}</textarea>
        </div>
    <button type="submit" class="btn btn-primary" style={margin-left: '100px'}>Submit</button>
    </form>
</div>